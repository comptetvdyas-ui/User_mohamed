  <script>
    // ----- Onglets Funções / Info -----
    const tabButtons = document.querySelectorAll(".aim-tab-btn");
    const funcoesBox = document.getElementById("aim-funcoes");
    const infoBox    = document.getElementById("aim-info");

    tabButtons.forEach(btn => {
      btn.addEventListener("click", () => {
        tabButtons.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");
        const tab = btn.dataset.tab;
        if (tab === "funcoes") {
          funcoesBox.style.display = "block";
          infoBox.style.display = "none";
        } else {
          funcoesBox.style.display = "none";
          infoBox.style.display = "block";
        }
      });
    });

    // ----- Options cliquables (checkbox) -----
    const optionRows = document.querySelectorAll(".option-row");
    optionRows.forEach(row => {
      row.addEventListener("click", () => {
        row.classList.toggle("active");
      });
    });

    // ----- Slider précision 0–10 -----
    const precSlider = document.getElementById("precSlider");
    const precValue  = document.getElementById("precValue");

    precSlider.addEventListener("input", () => {
      precValue.textContent = precSlider.value;
    });

    // ----- Bouton INJETAR → ouvrir Free Fire -----
    function abrirAppFreeFire(){
      window.location.href = "freefire://";
    }

    document.getElementById("injectBtn")
      .addEventListener("click", abrirAppFreeFire);
  </script>
